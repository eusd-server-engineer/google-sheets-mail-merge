{
  "name": "google-sheets-mail-merge",
  "version": "1.0.0",
  "description": "A Google Sheets add-on for mail merge with Gmail - open source alternative to Mailmeteor",
  "private": true,
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:e2e": "playwright test",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:debug": "playwright test --debug",
    "lint": "eslint . --ext .ts,.js,.gs",
    "lint:fix": "eslint . --ext .ts,.js,.gs --fix",
